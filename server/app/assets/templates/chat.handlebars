<div class="chat">
    <div class="discussions">
        <div class="title">
            <h2 class="h2-discussions">Discussions</h2>
            <div class="button">
                <img src="./icons/add_box.svg" class="add_box"></img>
                <img src="./icons/search-chat.svg" class="search"></img>
            </div>
        </div>
        <div class="discussions-container">
        {{#each discussions}}
            <div class="clickable-discussions">
                <div class="image-container">
                    <img src={{image_url}} id="image_url" class="image_url"></img>
                </div>
                <p class="anagram_nickname">{{anagram}} {{nickname}}</p>
                {{#if multipleParticipants}}
                    {{#if admin}}
                    <div class="admin_panel_settings">
                        <img src='./icons/admin_panel_settings.svg' class="admin_panel_settings-icon"></img>
                    </div>
                    {{/if}}
                {{/if}}
                <div class="close">
                    <img src='./icons/close.svg' class="close-icon"></img>
                </div>
            </div>
        {{/each}}
        </div>
    </div>
    <div class="center">
        <div class="header">
            <div class="left-header">
                <div class="image-container">
                    <img src={{image_url}} class="image_url"></img>
                </div>
                <div class="info">
                    <p class="anagram">{{anagram}}</p>
                    <p class="nickname">{{nickname}}</p>
                    <div class="pastille"></div>
                    <p class="status">{{status}}</p>
                    <div class="slide-show-container">
                        <img src="{{slide_show}}" class="slide-show"></img>
                    </div>
                </div>
            </div>
            <div class="right-header">
                <div class="group_add-container">
                    <img src="./icons/group_add.svg" class="group_add"></img>
                </div>
                {{#unless multipleParticipants}}
                <button class="play-button">
                    <img src="./icons/videogame.svg" height="24">
                </button>
                {{/unless}}
            </div>
        </div>
        <div class="messages">
            <div class="scrollable">
                {{#each messages}}
                <div class="message">
                    <div class="info">
                        <div class="image-container">
                            <img src={{image_url}} class="image_url"></img>
                        </div>
                        <div class="anagram">{{anagram}}</div>
                        <div class="nickname">{{nickname}}</div>
                        <div class="time">{{time}}</div>
                    </div>
                    <div class="output">{{message}}</div>
                </div>
                {{/each}}
            </div>
        <div class="input-container">
            <input class="textInput input" type="text">
        </div>
        </div>
    </div>
    {{#if multipleParticipants}}
    <div class="right-side">
        <div class="privacy">{{privacy}} channel</div>
        <div class="title online">
            <div class="pastille"></div>
            <div class="status ONLINE">ONLINE-{{nbOnline}}</div>
        </div>
        <div class="users usersOnline">
            {{#each usersOnline}}
                <div class="user">
                    <div class="name">
                        <div class="image-container">
                            <img src={{image_url}} class="image_url"></img>
                        </div>
                        <div class="name anagram">{{anagram}}</div>
                        <div class="name nickname">{{nickname}}</div>
                    </div>
                    {{#if others}}
                    <div class="play-button-container">
                        <button class="play-button">Play</button>         
                    </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>
        <div class="title inGame">
            <div class="pastille"></div>
            <div class="status IN_GAME">IN GAME-{{nbInGame}}</div>
        </div>
        <div class="users usersInGame">
            {{#each usersInGame}}
                <div class="user">
                    <div class="name">
                        <div class="image-container">
                            <img src={{image_url}} class="image_url"></img>
                        </div>
                        <div class="name anagram">{{anagram}}</div>
                        <div class="name nickname">{{nickname}}</div>
                    </div>
                    <div class="slide-show-container">
                        <img src="./icons/slideshow-ingame.svg" class="slide-show-ingame"></img>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="title offline">
            <div class="pastille"></div>
            <div class="status OFFLINE">OFFLINE-{{nbOffline}}</div>
        </div>
        <div class="users usersOffline">
            {{#each usersOffline}}
                <div class="user">
                    <div class="name">
                        <div class="image-container">
                            <img src={{image_url}} class="image_url"></img>
                        </div>
                        <div class="name anagram">{{anagram}}</div>
                        <div class="name nickname">{{nickname}}</div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    <div class="modal modalCreateChannel" id="modalCreateChannel">
        <div class="background"></div>
        <div class="modalOpen">
            <div class="close">
                <img src="./icons/close.svg" id="close"></img>
            </div>
            <label class="label labelChannelName" for="channelName">Channel name</label>
            <input class="textInput channelName" type="text" id="channelName" placeholder="New channel"></input>
            {{!-- {{#if error_message}} --}}
                <p class="error-message" id="error-message"></p>
            {{!-- {{/if}} --}}
            <label class="label labelSelectFriends" for="search">Select friends</label>
            <input class="textInput search modalSearch" type="text" id="modalSearch" placeholder="Research"></input>
            <div class="friends" id="friends">
                {{#each friends}}
                <div class="eachFriend" for="{{id}}">
                    <div class="left">
                        <div class="image-container">
                            <img src={{image_url}} id="image_url" class="image_url"></img>
                        </div>
                        <p class="anagram_nickname">{{anagram}} {{nickname}}</p>
                    </div>
                    <div class="right">
                        <label class="checkboxlabel" for="{{checkboxId}}"></label>
                        <input type="checkbox" class="checkbox" id="{{id}}" value="{{id}}"></input>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="button-container">
                <button class="createChannel">Create channel</button>
            </div>
        </div>
    </div>
</div>